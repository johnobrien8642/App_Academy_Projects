<h1>Edit <%= @cat.name %>'s Information</h1>

<form action="/cats" method="POST">
  <input type="hidden" name="_method" value="PATCH">


  <label for="name">Name</label><br>
    <input type="text" id="cats[name]" value="<%= @cat.name %>"><br>
  
  <label for="sex">Sex</label><br>
    <input type="radio" id="male" 
            name="sex" value="M" 
          <%= @cat.sex == "M" ? "checked" : "" %>>
      <label for="male">Male</label><br>
    <input type="radio" id="female" 
           name="sex" value="F"
           <%= @cat.sex == "F" ? "checked" : "" %> >
      <label for="female">Female</label><br>
  
  <label for="color">Color</label><br>
    <select name="color" id="color">
    <% Cat::CAT_COLORS.each do |color| %>
      <option value="color"
            <%= "selected" if @cat.color == color %>>
          <%= color %>
      </option>
    <% end %>
    </select><br>
  
  <label for="DOB">Date of Birth</label><br>
    <input type="date" id="DOB" 
           name="birth_date" 
           value="<%= @cat.birth_date %>"><br>
  
  <label>Description
    <textarea name="description" cols="30" rows="10"><%= @cat.description %>
    </textarea>
  </label><br>

</form>