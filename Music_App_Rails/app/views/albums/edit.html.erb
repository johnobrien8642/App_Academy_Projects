<div class="new-band-form">
    <h1>Edit Album</h1><br>
    <form class="fields" action="<%= album_url(@album) %>" method="POST">
      <%= auth_token %>
      <label for='album-band'>Band</label><br>
      <select id='album-band' name="album[band_id]">
        <% Band.all.each do |band| %>
            <option value="<%= band.id %>"
                <%= "selected" if @album.band_id == band.id %>>
                <%= band.name %>
            </option>
        <% end %>
      </select><br>
        
      <label for="album_name">Name</label><br>
      <input class="user-info-input" type="text" 
        name="albums[name]" id="album_name" value="<%= @album.name %>"><br>

      <label for="album_year">Year</label><br>
      <input type="number" min="1900" max="2099" 
        name="albums[year]" id="album_year" value="<%= @album.year %>"><br>
      
      <div class="radio-box">
        <label for="album_live">Recording Style</label><br>
        <input type="radio" name="albums[live]" 
          id="album_live" value="true"  <%= "checked" if @album.live %>>
        <label for="album_live">Live</label><br>
        <input type="radio" name="albums[live]" 
          id="album_live" value="false" <%= "checked" if !@album.live %>>
        <label for="album_live">Studio</label><br>
      </div>
      <input type="hidden" name="_method" value="PATCH">
      <input class="form-submit-button" type="submit" value="submit">
    </form>
    <a class="errors"><%= render 'shared/errors' %></a>
</div>