<section class="page">
  <div>
  <h2>A Current List of Music App's Catalogue</h2><br>
    <table class="bands-table">
        <thead class="column-head">
          <th>
            Band Name
          </th>
          <th>Edit/Delete</th>
        </thead>
        <tbody>
          <% @bands.order(:name).each do |band| %>
          <tr>
            <td><a href="<%= band_url(band) %>"><%= band.name %></a></td>
            <td><a href="<%= edit_band_url(band) %>">Edit</a>/
            <form action="<%= band_url(band) %>" method="POST">
            <%= auth_token %>
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" value="Delete">
            </form>
            </td> 
        </tbody>
        </tr>
        <% end %>
    </table>
  </div><br>

  <a class="create-button" href="<%= new_band_url %>">Create A New Band</a>
</section>

