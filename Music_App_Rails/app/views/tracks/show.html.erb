<h2>Track Information</h2><br>
<h2><%= @track.album.name %> | <%= @track.ord %> | <%= @track.title %></h2><br>

<table>
<thead>
<th>Number</th>
<th>Track</th>
<th>Lyrics</th>
<th>Edit/Delete</th>
</thead>
<tbody>
<tr>
<td><%= @track.ord %></td>
<td><%= @track.title %></td>
<td><%= @track.lyrics %></td>
<td><a href="<%= edit_track_url(@track) %>">Edit</a>/
<form action="<%= track_url(@track) %>" method="POST">
<%= auth_token %>
<input type="hidden" name="_method" value="DELETE">
<input type="submit" value="Delete">
</form>
</td> 
</tbody>
</tr>
</table>

<%= render 'shared/errors' %>

<%= render 'notes/form', track: @track %>

<%= render 'notes/note', notes: @notes %>
  
<a href="<%= album_url(@track.album_id) %>">Back to Album</a>
<a href="<%= band_url(@track.album.band_id) %>">Back to <%= @track.album.band.name %></a>
    