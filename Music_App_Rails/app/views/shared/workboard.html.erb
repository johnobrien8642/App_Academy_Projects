    <label for="band-select">Band</label><br>
      <select name="albums[band_id]" id="band-select">
        <option value="" selected disabled>--Select A Band--</option> 
        <% @bands.order(:name).each do |band| %>
           <%= options_for_select([[band.name, band.id]], params[:band_id]) %>
        <% end %>
      </select><br>