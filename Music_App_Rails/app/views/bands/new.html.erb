<div class="new-band-form">
    <h1>Submit A New Band</h1><br>
    <form class="fields"action="<%= bands_url %>" method="POST">
      <%= auth_token %>
      <label for="band_name">Band Name</label><br>
      <input class="user-info-input" type="text" 
        name="band[name]" id="band_name"><br>

      <input class="form-submit-button" type="submit" value="submit">
    </form>
    <a class="errors"><%= render 'shared/errors' %></a>
</div>