<h1>Creat a New Rental Request</h1>


<form action="<%= cat_rental_requests_url %>" method="POST">

<label for="cat_rental_request_cat_id">Available Cats</label><br>
  <select name="cat_rental_request[cat_id]" id="cat_rental_request_cat_id">
    <option disabled>--Select A Cat--</option>
    <% Cat.all.each do |cat| %>
      <% selected = @rental_request.cat_id == cat.id %>
      <option <%= selected ? "selected" : "" %> 
                value="<%= cat.id %>">
        <%= cat.name %>
      </option>
    <% end %>
  </select><br>
  <br>

  <label for="start_date">Start Date</label><br>
    <input type="date" id="start_date"
           name="cat_rental_request[start_date]"
           value=""><br>
    
  <label for="end_date">End Date</label><br>
    <input type="date" id="end_date"
           name="cat_rental_request[end_date]"
           value=""><br>


  <input type="submit">

</form>